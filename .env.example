# AgniRakshak - Environment Configuration Template
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# WEATHER & LIGHTNING API CREDENTIALS
# =============================================================================

# Aeris Weather API (for lightning detection)
# Sign up at: https://www.aerisweather.com/
AERIS_CLIENT_ID=your_aeris_client_id_here
AERIS_CLIENT_SECRET=your_aeris_client_secret_here

# =============================================================================
# GOOGLE EARTH ENGINE (OPTIONAL)
# =============================================================================

# Google Earth Engine Service Account (for vegetation data)
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/gee-service-account.json

# =============================================================================
# MODEL PATHS (Default values - modify if needed)
# =============================================================================

WILDFIRE_MODEL_PATH=wildfire_xgboost_model.json
ROS_MODEL_PATH=../Threat_Predictor/Ros_Pred/wildfire_ros_xgboost_model.joblib

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

FLASK_ENV=development
FLASK_DEBUG=True
PORT=5000